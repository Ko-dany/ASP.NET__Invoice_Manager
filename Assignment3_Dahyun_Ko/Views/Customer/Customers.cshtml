@using Assignment3_Dahyun_Ko.Entities;
@model List<Customer>

@{
    ViewData["Title"] = "All Customers";
}

<div class="container">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <a asp-controller="Customer" asp-action="Add">Add a new customer</a>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.Name</td>
                    <td>@customer.Address1 @customer.Address2</td>
                    <td>
                        <a asp-controller="Customer" asp-action="Invoices" asp-route-id="@customer.CustomerId">Invoices</a>
                        |
                        <a asp-controller="Customer" asp-action="Edit" asp-route-id="@customer.CustomerId">Edit</a>
                        |
                        <a asp-controller="Customer" asp-action="Delete" asp-route-id="@customer.CustomerId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p>
        <a asp-controller="Customer" asp-action="Customers" asp-route-lowerBound="A" asp-route-upperBound="E">A-E</a>
        |
        <a asp-controller="Customer" asp-action="Customers" asp-route-lowerBound="F" asp-route-upperBound="K">F-K</a>
        |
        <a asp-controller="Customer" asp-action="Customers" asp-route-lowerBound="L" asp-route-upperBound="R">L-R</a>
        |
        <a asp-controller="Customer" asp-action="Customers" asp-route-lowerBound="S" asp-route-upperBound="Z">S-Z</a>
    </p>
</div>